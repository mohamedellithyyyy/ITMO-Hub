import pandas as pd
from openpyxl.styles import Border, Side
from openpyxl import load_workbook


# Read file
df = pd.read_excel("lab5.xlsx", sheet_name="Sheet2", header=None)


# Clean column instead of deleting
# df[5] = None
df = df.drop(df.columns[5], axis=1)


# Save temporary
temp_path = "../output/output.xlsx"
df.to_excel(temp_path, index=False, header=False)


# Reopen to apply borders
wb = load_workbook(temp_path)
ws = wb.active


# Blue border
blue = Side(border_style="thin", color="0000FF")
border = Border(left=blue, right=blue, top=blue, bottom=blue)

# Apply border only to A3:Y15
for row in ws.iter_rows(min_row=3, max_row=15, min_col=1, max_col=25):  # A=1, Y=25
    for cell in row:
        cell.border = border



# Save result
wb.save("../output/final_lab5V2.xlsx")



